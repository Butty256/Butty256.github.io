---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, TITLE_SEPARATOR } from '../consts';

interface Props {
  title?: string;
  description?: string;
}

const { title: _title, description: _description } = Astro.props;
const title = _title ? `${_title}${TITLE_SEPARATOR}${SITE_TITLE}` : SITE_TITLE;
const description = _description ?? title;
---

<>
  <html lang="ja">
    <head>
      <BaseHead title={title} description={description} />
    </head>
    <body>
      <Header />
      <main>
        <slot />
      </main>
      <Footer />
    </body>
  </html>
</>
